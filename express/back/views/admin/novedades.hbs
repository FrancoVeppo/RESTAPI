{{! Fila 1: Usuario y Logout }}
<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col text-end">
            <p>
                Hola {{usuario}} !
                <a class="btn btn-danger" href="/admin/login/logout">
                    Cerrar sesión <i class="fas fa-sign-out-alt"></i>
                </a>
            </p>
        </div>
    </div>

    {{! Fila 2: Título y Botón Nuevo }}
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>

    {{! Fila 3: Tabla de Novedades }}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        {{! CAMBIO AÑADIDO DE LA IMAGEN }}
                        <th scope="col">Imagen</th>
                        <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{! Aquí va el bucle para generar las filas dinámicamente }}
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        {{! CAMBIO AÑADIDO DE LA IMAGEN }}
                        <td>{{{ imagen }}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>